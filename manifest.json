{
  "manifest_version": 2,
  "name": "Scribdify",
  "version": "1.0.0",
  "description": "View Scribd Document Content on an Embed URL",
  
  "icons": {
    "24": "icon.svg",
    "48": "icon.svg",
    "96": "icon.svg",
    "128": "icon.svg",
    "256": "icon.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "scribdify@tejaromalius.com"
    }
  },
  

  "browser_action": {
    "default_icon": "icon.svg",
    "default_title": "View on Scribd"
  },
  
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "https://*.scribd.com/*"
  ]
}